<div class="container">

  <div class="jumbotron">
    <h1 class="display-4 text-center">Hello, fellow reader!</h1>
    <p class="lead text-center">This are the lastest hot news available from the internet.</p>
    <hr class="my-4">
    <p class="text-center">We love to give The best. The lastest. The most interesting news!.</p>
    <div class="text-center mx-auto"><a class="btn btn-primary btn-lg" href="#wrappertitle" role="button">Start reading
        now!</a></div>
  </div>

  <div id="wrapper">
    <h1 id="wrappertitle" class="text-center">Lastest News Scraper</h1>
    <h2><i></i></h2>
    <div id="articles">
      {{#each article}}
      <div class='jumbotron jumbotron-fluid new'>
        <div class='container'>
          <h5>
            <p class="cTitle" data-id={{this._id}}>{{this.title}}
              
            </p>
            <p>{{this.content}}<a href={{this.link}}>more</a></p>
          </h5>
        </div>
      </div>
      {{/each}}
    </div>
    <div id="notes"></div>
  </div>
</div>