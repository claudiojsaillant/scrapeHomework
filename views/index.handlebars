<h1 class="text-center burger">Burgers!</h1>

<div class="row">
  <div class="col-sm-2"></div>
  <div class="col-sm-4 notdevoured">
    <h2>Not devoured!</h2>
    <ul>
      {{#each burgers}}
      {{#unless devoured}}
      
      {{!-- {{this.id}} --}}
      {{> burgers/burgerBlock devoured=true}}
      {{/unless}}
      {{/each}}
    </ul>
  </div>

  <div class="col-sm-4 devoured">
    <h2>Devoured</h2>
    <ul>
      {{#each burgers}}
      {{#if devoured}}
      <li>{{name}} ðŸ˜‹</li>
      {{/if}}
      {{/each}}
    </ul>
  </div>
  <div class="col-sm-2"></div>
</div>

<div class="row">
  <div class="col-sm-4"></div>
<div class="col-sm-4">

<form class="create-form">
  <h2 class="text-center order">Order a burger</h2>
  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <button class="btn btn-warning" type="submit text-center mx-auto">Add burger</button>
</form>

</div>
<div class="col-sm-4"></div>
</div>
